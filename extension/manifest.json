{
  "name": "YouTube Database-linked Summary",
  "description": "Hover to view cached summaries or generate new ones.",
  "version": "0.1.0",
  "manifest_version": 3,
  "permissions": ["storage", "activeTab"],
  "host_permissions": [
    "https://*.youtube.com/*",
    "https://api.openai.com/*",
    "https://your-backend-domain.vercel.app/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["utils.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_page": "options.html"
}
